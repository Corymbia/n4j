{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Instance with many volumes attached",
  "Parameters": {
    "ImageId": {
      "Description": "Image id",
      "Type": "String",
      "Default": "emi-d7b17cdd"
    },
    "Zone": {
      "Description": "The zone to launch instances in",
      "Type": "String",
      "Default": "one"
    },
    "KeyName": {
      "Description": "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type": "String",
      "Default": ""
    },
    "InstanceType": {
      "Description": "EC2 instance type to use",
      "Type": "String",
      "Default": "m1.small",
      "ConstraintDescription": "must be a valid EC2 instance type."
    }
  },
  "Resources": {
    "default": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Volume stack security group",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22",
            "CidrIp": "0.0.0.0/0"
          }
        ]
      }
    },
    "volume01": {
      "Type": "AWS::EC2::Volume",
      "Properties": {
        "Size": "1",
        "AvailabilityZone": {
          "Ref": "Zone"
        }
      }
    },
    "volume02": {
      "Type": "AWS::EC2::Volume",
      "Properties": {
        "Size": "1",
        "AvailabilityZone": {
          "Ref": "Zone"
        }
      },
      "DependsOn" : "volume01"
    },
    "volume03": {
      "Type": "AWS::EC2::Volume",
      "Properties": {
        "Size": "1",
        "AvailabilityZone": {
          "Ref": "Zone"
        }
      },
      "DependsOn" : "volume02"
    },
    "volume04": {
      "Type": "AWS::EC2::Volume",
      "Properties": {
        "Size": "1",
        "AvailabilityZone": {
          "Ref": "Zone"
        }
      },
      "DependsOn" : "volume03"
    },
    "instance" : {
      "Type" : "AWS::EC2::Instance",
      "Properties" : {
        "AvailabilityZone" : { "Ref" : "Zone" },
        "ImageId" : { "Ref" : "ImageId" },
        "KeyName" : { "Ref": "KeyName" }
      }
    },
    "volumeattachment01" : {
      "Type":"AWS::EC2::VolumeAttachment",
      "Properties" : {
        "Device" : "/dev/sdf",
        "InstanceId" : { "Ref" : "instance" },
        "VolumeId" : { "Ref" : "volume01" }
      }
    },
    "volumeattachment02" : {
      "Type":"AWS::EC2::VolumeAttachment",
      "Properties" : {
        "Device" : "/dev/sdg",
        "InstanceId" : { "Ref" : "instance" },
        "VolumeId" : { "Ref" : "volume02" }
      }
    },
    "volumeattachment03" : {
      "Type":"AWS::EC2::VolumeAttachment",
      "Properties" : {
        "Device" : "/dev/sdh",
        "InstanceId" : { "Ref" : "instance" },
        "VolumeId" : { "Ref" : "volume03" }
      }
    },
    "volumeattachment04" : {
      "Type":"AWS::EC2::VolumeAttachment",
      "Properties" : {
        "Device" : "/dev/sdi",
        "InstanceId" : { "Ref" : "instance" },
        "VolumeId" : { "Ref" : "volume04" }
      }
    }
  },
  "Outputs" : {
    "InstanceId" : {
      "Value" : { "Ref" : "instance" }
    }
  }
}